			<display_entry name="RoundsPerMinute" title_key="statRoundsPerMinute" tags="perkAdvancedEngineering,admin"/>						
			<display_entry name="DamageFalloffRange" title_key="statDamageFalloffRange" tags="perkAdvancedEngineering,admin"/>
			<display_entry name="DegradationMax" title_key="statDegradationMax" tags="perkAdvancedEngineering,admin"/>
		</item_display_info>
