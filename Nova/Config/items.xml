<configs>
	<append xpath="/items">

		<item name="vehicleNovachassis">
			<property name="Extends" value="vehicleWheels"/>
			<property name="CustomIcon" value="Novachassis"/>
			<property name="DescriptionKey" value="vehicleNovachassisDesc"/>
			<property name="EconomicValue" value="100"/>
		</item>
		
		<item name="vehicleNovaaccessories">
			<property name="Extends" value="vehicleWheels"/>
